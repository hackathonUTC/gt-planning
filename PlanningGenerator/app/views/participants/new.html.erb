<%= javascript_include_tag :defaults, "nested_form" %>
<% if @event.errors.any? %>        
      <div id="error_explanation" class="col-sm-6  btn-danger">
        <h4>
          La modification de l'évènement est impossible : 
        </h4>
        <ul>
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <%end%>
</br>
<div class ="row">
<%= nested_form_for @event, url: {action: "create"} do |f| %>
        <%= f.fields_for :participants do |participant_form| %>
          <% @j=@j+1%>
          <%= participant_form.label :nom %>
          <%= participant_form.date_field :nom, :class => "form-control"%>
          <ul>
          <% @creneaus = Creneau.all %>
          <% @creneaus.each do |c| %>
              <li><%= c.date_debut.strftime("%m/%d/%Y : %H:%M%p") %>
              --
              <%= c.date_fin.strftime("%m/%d/%Y : %H:%M%p") %>
              <%  creneaux = "creneau_id[#{c.id}][#{@j}]" %>
               <%= check_box_tag "#{@j}c_ids[]", c.id, :class => "form-control"%>
              </li>
          <%end %> 
          </ul>
          <%= participant_form.link_to_remove "Enlever ce Participant" %>
        <% end %>
        <p><%= f.link_to_add "Ajouter un Participant", :participants %></p>
        <%=  button_tag(type: 'submit') do %>
          Sauvegarder
	        <%end%>
<%end%>
</div>

