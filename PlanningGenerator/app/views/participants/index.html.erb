
<h1>Liste des Participants </h1>
<div class="row">
<table class = "table table-striped table-bordered">
   <tr>
       <th>Nom</th>
       <th>Évènement</th>
   </tr>
   <% Participant.all.each do |p| %>
   <tr>
       <td><%=p.nom%></td>
       <td><%=p.event.Nom%></td>
       <td><%= link_to "Modifier", edit_participant_path(p), :class => "btn btn-warning"%></td>
   </tr>
   <%end%>
</table>
</div>
