          <% end %>
        </ul>
      </div>
    <%end%>
</div>
</br>
<%= form_tag("create", method: "post") do%>
	<table class ="table">
		<tr>
				<td></td>
				<% @participants.each do |p| %>
				<td><%=p.nom%></td>
				<% end %>
		</tr>
				<% @creneaux.all.each do |c| %>
